{
  "name": "api-express-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon .",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run clean && npm run build",
    "start": "node .",
    "clean": "rm -rf ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "ts",
    "ignore": [
      "*.test.ts",
      "./dist"
    ],
    "events": {
      "restart": "kill-port 3000",
      "crash": "kill-port 3000"
    },
    "delay": "1500",
    "exec": "npm start",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.12"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.6.1",
    "kill-port": "^1.6.1",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
